{{!< default}}

{{#post}}
    <div class="max-w-3xl mx-auto my-20">
        <h1 class="text-2xl font-semibold text-color-dark-primary">{{title}}</h1>

        <div>
            <time datetime="{{date format=" YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time> 
            <span class="bull">&bull;</span>
            <span>{{reading_time}} min read</span>
        </div>

        {{#if custom_excerpt}}
            <p class="my-8 text-xl italic text-color-dark-secondary">
                {{custom_excerpt}}
            </p>
        {{/if}}

        {{#if feature_image}}
        <figure class="gh-feature-image">
            <img srcset="{{img_url feature_image size=" s"}} 300w, {{img_url feature_image size="m" }} 600w, {{img_url
                feature_image size="l" }} 1000w, {{img_url feature_image size="xl" }} 2000w"
                sizes="(max-width: 1000px) 1000px, 2000px" loading="lazy" src="{{img_url feature_image size=" xl"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
            {{#if feature_image_caption}}
            <figcaption>{{feature_image_caption}}</figcaption>
            {{/if}}
        </figure>
        {{/if}}
        

        <div class="content-typography">
            {{{content}}}
        </div>

        <div>
            <button data-social-share-button data-social-provider="FACEBOOK" data-url="{{url absolute=true}}">Facebook</button>
            <button data-social-share-button data-social-provider="TWITTER" data-url="{{url absolute=true}}">Twitter</button>
            <button data-social-share-button data-social-provider="LINKEDIN" data-url="{{url absolute=true}}">Linkedin</button>
            <button data-social-share-button data-social-provider="PINTEREST" data-url="{{url absolute=true}}">Pinterest</button>
        </div>
    </div>
{{/post}}